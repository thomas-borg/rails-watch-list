<h1>Movie Lists</h1>

<div class="cards">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path list.photo.key%>);">
      <%= link_to list.name, list_path(list) %>
      <p><%= link_to "Delete", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
    </div>
  <% end %>
</div>

<%= link_to "New List", new_list_path %>
